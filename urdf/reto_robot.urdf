<?xml version="1.0"?>
<robot name="reto_robot">
  <!-- Base Link (Fijo) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Primer Eslab贸n del Brazo -->
  <link name="arm_link1">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.3" radius="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.3" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Segundo Eslab贸n del Brazo -->
  <link name="arm_link2">
    <visual>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.04"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Junta entre Base y Primer Eslab贸n (Revolute) -->
  <joint name="base_to_arm1_joint" type="revolute">
    <parent link="base_link"/>
    <child link="arm_link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.0"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Junta entre Primer y Segundo Eslab贸n (Revolute) -->
  <joint name="arm1_to_arm2_joint" type="revolute">
    <parent link="arm_link1"/>
    <child link="arm_link2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.70" upper="2.70" effort="100" velocity="1.0"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>
</robot>